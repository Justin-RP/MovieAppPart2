    android:layout_height="140dp"
    android:padding="5dp"
    android:background="@color/colorGray"
    android:id="@+id/rowCardView_id">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
